@using MKTListNet.Application.ViewModel;
@using MKTListNet.Domain.Interface.Repository;
@using MKTListNet.Views.Shared;

@model IPagingResult<EmailViewModel>?
@{
}

<div class="container-fluid">
    <div class="row border rounded mx-2 mt-2 pb-1 bg-light align-items-center">
        <div class="h4">
            Emails Cadastrados
            <hr class="my-2" />
        </div>

        <div class="col">
            <form action="Emails">
                <div class="input-group">
                    <input type="text" class="form-control" name="search" placeholder="Search" autocomplete="off" value="@ViewBag.Search" autofocus aria-label="Search" aria-describedby="Search email">
                    <button class="btn btn-outline-secondary" type="submit" id="button-addon2"><i class="fa-solid fa-magnifying-glass"></i></button>
                </div>
            </form>
        </div>
        <div class="col">
            <div class=" p-1 text-center">
                <a class="btn btn-primary" title="Adicionar emails selecionados em uma lista"><i class="fa-solid fa-arrow-right-to-bracket"></i></a>
                &ensp;
                <a class="btn btn-primary" asp-action="AddEmails" asp-controller="Emails" asp-area="Admin">Importar Emails</a>
            </div>
        </div>
    </div>

    <div class="row mx-2 mt-2 align-items-center">
        @if (Model == null || Model.Items == null || Model.Items.Count() < 1)
        {
            <p class="h4 p-4">Não existe emails cadastrados!</p>
        }
        else
        {
            <div class="col-7 p-0">
                <table class="table rounded">
                    <thead>
                        <tr class="bg-light">
                            <th>
                                <input class="form-check-input" type="checkbox" onclick="checkAll(this)">
                            </th>
                            <th class="rounded" scope="row">
                                <div class="row justify-content-around">
                                    <div class="col">Emails (@Model?.Items?.Count().ToString("N0"))</div>
                                    <div class="col-auto ms-auto fw-light small"> Total: @Model?.TotalItems.ToString("N0")</div>
                                </div>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <form method="post" asp-area="Admin" asp-controller="Emails" asp-action="MoveToList" name="lstIds" id="frmChk">
                            @foreach (var item in Model!.Items)
                            {
                                <tr>
                                    <td>
                                        <input class="form-check-input" type="checkbox" name="@item.Id">
                                    </td>
                                    <td>
                                        <i class="fa-solid fa-circle-info fa-lg" style="color: #bfc3ca; cursor:help" title="@item.Id"></i>&ensp;&ensp; @item.EmailAddress
                                    </td>
                                </tr>
                            }
                        </form>
                    </tbody>
                </table>

                @{
                    var dataPg = new PagingData(Model.PageNumber, Model.TotalPages, Model.TotalPages, "Index");
                    <partial name="PaginationComp" model="dataPg" />
                }
            </div>
        }
    </div>

    <br />
</div>

@section Scripts{
    <script>
        function checkAll(checkbox) {
            // Obtém todos os elementos checkbox da página
            var checkboxes = document.querySelectorAll('input[type="checkbox"]');

            // Verifica todos os checkboxes, exceto o próprio checkbox clicado
            for (var i = 0; i < checkboxes.length; i++) {
                if (checkboxes[i] !== checkbox) {
                    checkboxes[i].checked = checkbox.checked;
                }
            }
        }
    </script>
}